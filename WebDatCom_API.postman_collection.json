{
  "info": {
    "name": "WebDatCom API",
    "description": "API Collection cho hệ thống đặt cơm trực tuyến",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://rice-be-1.onrender.com/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": "{{baseUrl}}/auth/verify-otp"
          }
        },
        {
          "name": "Resend OTP",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\"\n}"
            },
            "url": "{{baseUrl}}/auth/resend-otp"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@datcom.vn\",\n  \"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/auth/me"
          }
        }
      ]
    },
    {
      "name": "Meal Packages",
      "item": [
        {
          "name": "Get All Packages",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/meal-packages"
          }
        },
        {
          "name": "Get Active Packages",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/meal-packages?isActive=true"
          }
        },
        {
          "name": "Get Package By ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/meal-packages/:id"
          }
        },
        {
          "name": "[Admin] Create Package",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Gói 10 lượt\",\n  \"turns\": 10,\n  \"price\": 350000,\n  \"validDays\": 30,\n  \"packageType\": \"normal\"\n}"
            },
            "url": "{{baseUrl}}/meal-packages"
          }
        },
        {
          "name": "[Admin] Update Package",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"price\": 380000\n}"
            },
            "url": "{{baseUrl}}/meal-packages/:id"
          }
        },
        {
          "name": "[Admin] Delete Package",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/meal-packages/:id"
          }
        }
      ]
    },
    {
      "name": "Package Purchases",
      "item": [
        {
          "name": "Get My Requests",
